<?xml  version="1.0"?>
<typesystem package="FabricUI">
  <namespace-type name="FabricUI"  generate="no">
    <namespace-type name="Viewports"  generate="yes">
      <object-type name="RTRGLViewportWidget" copyable="false">
        
      </object-type>
      <object-type name="ViewportWidget" copyable="false">
        <modify-function signature="ViewportWidget(FabricCore::Client*,QColor,QGLContext*,QWidget*,QGLWidget*,QSettings*)">
          <modify-argument index="1">
            <replace-type modified-type="PyObject"/>
          </modify-argument>
          <inject-code class="target" position="beginning">
            FabricCore::Client *client_ptr = 0;

            <insert-template name="to_cpp_Client">
              <replace from="%INPUT" to="%PYARG_1"/>
              <replace from="%OUTPUT" to="client_ptr"/>
              <replace from="%DEREF" to=""/>
            </insert-template>

            if (!PyErr_Occurred()) {
             %0 = new %TYPE(client_ptr, %2, %3, %4, %5);
            }
          </inject-code>
        </modify-function>

        <rejection field-name="m_fpsStack"/>
      </object-type>
      
    </namespace-type>
  </namespace-type>
</typesystem>
